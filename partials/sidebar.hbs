<div class="sidebar">
    {{#if @labs.subscribers}}
        <div class="sidebar__widget">
            <h4 class="sidebar__widget-title">Subscribe</h4>
            Stay up to date by getting the latest posts delivered right to your inbox.

            <input type="text" class="form-control">
        </div>
    {{/if}}

    {{#if tag_list}}
        <div class="sidebar__widget">
            <h4 class="sidebar__widget-title">Tags</h4>

            {{#get 'tags' limit='all' include='count.posts' order='count.posts desc'}}
                <ul class="sidebar__tag-list">
                    {{#foreach tags}}
                        <li class="sidebar__tag-list-item">
                            <a class="sidebar__tag-list-link" href="{{url}}" class="tag">{{name}} ({{count.posts}})</a>
                        </li>
                    {{/foreach}}
                </ul>
            {{/get}}
        </div>
    {{/if}}

    {{#if related_posts}}
        {{#get "posts" limit="5" filter="id:-{{post_id}}+tag:[{{primary_tag.slug}}]"}}
            {{#if posts.length}}
                <div class="sidebar__widget">
                    <h4 class="sidebar__widget-title">Related posts</h4>

                    <ul class="list-group">
                        {{#foreach posts}}
                            <li class="list-group-item"><a href="{{url}}">{{title}}</a></li>
                        {{/foreach}}
                    </ul>
                </div>
            {{/if}}
        {{else}}
            <div class="sidebar__widget">
                <h4 class="sidebar__widget-title">Latest posts</h4>
            </div>
        {{/get}}
    {{/if}}
</div>
