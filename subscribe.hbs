{{!< default}}

{{navigation}}

<div class="subscribe-page content container no-header">
    <div class="row">
        <div class="col-md-6 col-sm-12 my-auto text-left">
            <h1 class="subscribe-page__title">{{t "Subscribe"}}</h1>
            {{t "Stay up to date by getting the latest posts delivered right to your inbox."}}
        </div>
        <div class="col-md-6 col-sm-12 my-auto text-sm-center text-md-left">
            <div class="subscribe-page__form m-auto">
                <form method="post" action="{{action}}" class="{{form_class}}">
                    {{hidden}}

                    <div class="subscribe-form">
                        {{input_email class="form-control subscribe-form__input" placeholder="Your email" value=email}}
                        <button class="btn btn-primary subscribe-form__submit-button" type="submit" id="button-addon1">Subscribe</button>
                    </div>

                    {{script}}
                </form>

                {{#if error}}
                    <p class="subscribe-page__error">{{ error.message }}</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>
